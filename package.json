{
  "name": "@timottowitz/convex-hmlr",
  "version": "0.1.0",
  "description": "HMLR - Hierarchical Memory Lookup & Routing for Convex. A portable, state-aware long-term memory system for AI agents.",
  "keywords": [
    "convex",
    "memory",
    "ai",
    "llm",
    "rag",
    "vector-search",
    "embeddings",
    "hmlr"
  ],
  "license": "MIT",
  "type": "module",
  "main": "./dist/client/index.js",
  "types": "./dist/client/index.d.ts",
  "files": [
    "dist",
    "src/component"
  ],
  "exports": {
    ".": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    },
    "./convex.config.js": "./dist/component/convex.config.js",
    "./_generated/component": "./dist/component/_generated/component.js",
    "./test": "./dist/test.js"
  },
  "scripts": {
    "build": "npm run build:component && npm run build:client",
    "build:component": "tsc -p tsconfig.component.json",
    "build:client": "tsc -p tsconfig.client.json",
    "dev": "npm-run-all --parallel dev:*",
    "dev:component": "npx convex codegen --component-dir ./src/component --watch",
    "dev:build": "tsc -p tsconfig.component.json --watch",
    "dev:example": "cd example && npx convex dev",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "convex": "^1.17.0"
  },
  "devDependencies": {
    "@edge-runtime/vm": "^5.0.0",
    "@types/node": "^20.0.0",
    "convex-test": "^0.0.34",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "convex": "^1.17.0"
  }
}
